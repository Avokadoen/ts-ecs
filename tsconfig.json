{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES5",
        "lib": [
            "dom", 
            "es5",
            "ES2015.Core",
            "ES2015.Collection",
            "ES2015.Iterable"
        ],
        "downlevelIteration": true,
        "declaration": true,
        "declarationDir": "dist",
        "declarationMap": true,
        "esModuleInterop": true,
        "jsx": "react",
        "plugins": [
            { "transform": "./src/transformers/register-system.transformer.ts" },
        ]
    },
    "include": [
        "./src/**/*", 
        "index.ts", 
        "./spec/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "typedocOptions": {
        "inputFiles": ["./src", "index.ts"],
        "mode": "modules",
        "out": "docs"
    }
  }
